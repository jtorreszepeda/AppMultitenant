@page "/access-denied"
@inject NavigationManager NavigationManager

<PageTitle>Acceso Denegado - AppMultiTenant</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="mb-4 text-danger">Acceso Denegado</h2>
                    <p class="lead mb-4">
                        No tienes los permisos necesarios para acceder a esta página.
                    </p>
                    <p class="mb-4">
                        Si crees que deberías tener acceso a esta página, por favor contacta al administrador.
                    </p>
                    <div class="mt-4">
                        <button class="btn btn-primary me-2" @onclick="GoHome">
                            <i class="fas fa-home me-1"></i> Ir a Inicio
                        </button>
                        <button class="btn btn-outline-secondary" @onclick="GoBack">
                            <i class="fas fa-arrow-left me-1"></i> Volver Atrás
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void GoHome()
    {
        NavigationManager.NavigateTo("/");
    }
    
    private void GoBack()
    {
        NavigationManager.NavigateTo(NavigationManager.Uri);
        try 
        {
            // Intenta usar la API del navegador para retroceder
            NavigationManager.NavigateTo("javascript:history.back()");
        }
        catch 
        {
            // Si falla, vuelve a la página de inicio
            NavigationManager.NavigateTo("/");
        }
    }
} 